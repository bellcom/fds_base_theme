<footer>
  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-3 footer-col ">
          <section>
            <div class=" align-text-left ">
              <h1 class="h5 mb-4" title="Ansvarlig myndighed"
                  aria-label="Ansvarlig myndighed">Ansvarlig
                myndighed</h1>

              <ul class=" unstyled-list">

                <li class="">
                  <img src="/assets/img/ea507176c85c67b71f7909f3bac14040.png" class="logo" alt="Logostyrelsen" /></li>

              </ul>

            </div>
          </section>
        </div>
        <div class="col-12 col-sm-12 col-md-3 footer-col ">
          <section>
            <div class="align-text-left">

              {% if theme_settings.contact_information.business_owner_name %}
                <div>
                  {{ theme_settings.contact_information.business_owner_name }}
                </div>
              {% endif %}

              {% if theme_settings.contact_information.address %}
                <div>
                  {{ theme_settings.contact_information.address }}
                </div>
              {% endif %}

              {% if theme_settings.contact_information.zipcode and theme_settings.contact_information.city %}
                <div>
                  {{ theme_settings.contact_information.zipcode }} {{ theme_settings.contact_information.city }}
                </div>
              {% endif %}

              <br>

              {% if theme_settings.contact_information.phone_readable %}
                <div>
                  {{ 'Tlf.:' | trans }} {{ theme_settings.contact_information.phone_readable }}
                </div>
              {% endif %}

              {% if theme_settings.contact_information.email %}
                <div>
                  <a href="mailto: {{ theme_settings.contact_information.email }}">
                    {{ theme_settings.contact_information.email }}
                  </a>
                </div>
              {% endif %}

              <br>

              {% if theme_settings.contact_information.working_hours %}
                <div>
                  {{ theme_settings.contact_information.working_hours }}
                </div>
              {% endif %}

            </div>
          </section>
        </div>
        <div
          class="col-12 col-sm-12 col-md-3 footer-col d-print-none">
          <section>
            <div class="align-text-left">
              {{ page.footer_first }}
            </div>
          </section>
        </div>
        <div
          class="col-12 col-sm-12 col-md-3 footer-col d-print-none">
          <section>
            <div class="align-text-left">
              {{ page.footer_second }}
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</footer>
